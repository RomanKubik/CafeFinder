<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_cafe_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cafe_card_img"/>
            <TextView
                android:id="@+id/tv_cafe_card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large_plus"
                android:layout_alignBottom="@id/img_cafe_card"
                android:textColor="@color/colorBackground"
                android:background="#40000000"/>
            <TextView
                android:id="@+id/tv_cafe_card_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_cafe_card_name"
                android:layout_alignEnd="@id/tv_cafe_card_name"
                android:layout_alignRight="@id/tv_cafe_card_name"
                android:textColor="@color/colorBackground"
                android:textSize="@dimen/text_size_large_plus"/>
            <TextView
                android:id="@+id/tv_cafe_card_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_cafe_card"
                android:layout_toStartOf="@+id/tv_cafe_card_destination"
                android:layout_toLeftOf="@+id/tv_cafe_card_destination"
                android:textSize="@dimen/text_size_large" />
            <TextView
                android:id="@+id/tv_cafe_card_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_alignBaseline="@id/tv_cafe_card_address"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_medium"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>